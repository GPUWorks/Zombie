<?xml version="1.0" encoding="UTF-8"?>
<zombie>
	<settings>
		<width>600</width>
		<height>600</height>
		<unitlevel>20</unitlevel>
		<zoomlevel>3</zoomlevel>
	</settings>
	<movingObjects>
		<car>
			<name>Volvo</name>
			<image>images/car.png</image>
			<mass>100</mass> <!-- Kg-->
			<width>1</width> <!-- Meter-->
			<length>2</length>
			<life>1000000</life>
		</car>
		<unit>
			<name>Human</name>
			<animation>
				<scale>0.0078125</scale> <!-- 1/128 -->
				<image>images/human/human1.png</image>
				<time>0.18</time>
				<image>images/human/human2.png</image>
				<time>0.18</time>
				<image>images/human/human1.png</image>
				<time>0.18</time>
				<image>images/human/human3.png</image>
				<time>0.18</time>
			</animation>
			<mass>100</mass>
			<radius>1</radius>
			<life>100</life>
			<infected>1</infected> <!-- 1=true, 0=false -->
			<walkingSpeed>1</walkingSpeed> <!-- m/s -->
			<runningSpeed>1</runningSpeed> <!-- m/s -->
			<stamina>1</stamina> <!-- seconds -->
		</unit>
		<unit>
			<name>Zombie</name>
			<animation>
				<scale>0.0078125</scale> <!-- 1/128 -->
				<image>images/zombie/zombie1.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie2.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie3.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie4.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie5.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie6.png</image>
				<time>0.18</time>
			</animation>
			<mass>100</mass>
			<radius>1</radius>
			<life>100</life>
			<infected>1</infected>
			<walkingSpeed>1</walkingSpeed>
			<runningSpeed>2</runningSpeed>
			<stamina>1</stamina>
		</unit>
	</movingObjects>
	<weapons>
		<weapon>
			<name>Handgun</name>
			<image>images/handgun.png</image>
			<damage>50</damage>
			<timeBetweenShots>0.3</timeBetweenShots>
			<range>10</range>
			<clipSize>12</clipSize>
			<shootSound>sound/handgunShoot.wav</shootSound>
			<reloadSound>sound/handgunReload.wav</reloadSound>
		</weapon>
		<weapon>
			<name>ZombieFist</name>
			<image>images/ZombieFist.png</image>
			<damage>10</damage>
			<timeBetweenShots>0.3</timeBetweenShots>
			<range>1</range>
			<clipSize>1000000</clipSize>
			<shootSound>sound/ZombieFist.wav</shootSound>
			<reloadSound>sound/ZombieReload.wav</reloadSound>
		</weapon>
	</weapons>
</zombie>
