<?xml version="1.0" encoding="UTF-8"?>
<zombieGame>
	<buildings>
		<hitSound>sounds/buildingHit.wav</hitSound>
	</buildings>
	<settings>
		<font>fonts/Ubuntu-B.ttf</font>
		<width>600</width>
		<height>600</height>
		<positionX>400</positionX>
		<positionY>400</positionY>
		<maximized>0</maximized>
		<unitLevel>20</unitLevel>
		<zoomLevel>3</zoomLevel>
		<impulseThreshold>10</impulseThreshold>
		<timeStepMS>17</timeStepMS>
		<map>map.xml</map>
	</settings>
	<weapons>
		<weapon>
			<name>Handgun</name>
			<image>images/handgun.png</image>
			<damage>60</damage>
			<timeBetweenShots>0.3</timeBetweenShots>
			<range>10</range>
			<clipSize>12</clipSize>
			<shootSound>sounds/handgunShoot.wav</shootSound>
			<reloadSound>sounds/handgunReload.wav</reloadSound>
			<animation>
				<frame>
					<image x="256" y="512" w="256" h="256">images/spritesheet.png</image>
					<bodyWidth>130</bodyWidth>
				</frame>
			</animation>
		</weapon>
		<weapon>
			<name>ZombieFist</name>
			<image>images/ZombieFist.png</image>
			<damage>10</damage>
			<timeBetweenShots>0.3</timeBetweenShots>
			<range>1</range>
			<clipSize>1000000</clipSize>
			<shootSound>sounds/ZombieFist.wav</shootSound>
			<reloadSound>sounds/ZombieReload.wav</reloadSound>
			<animation>
				<frame>
					<image x="256" y="768" w="256" h="256">images/spritesheet.png</image>
					<bodyWidth>130</bodyWidth>
				</frame>
			</animation>
		</weapon>
	</weapons>
	<car>
		<animation>
			<frame>
				<image">images/jeep.png</image>
				<bodyWidth>104</bodyWidth>
			</frame>
		</animation>
		<mass>10</mass> <!-- Kg-->
		<width>1</width> <!-- Meter-->
		<length>2</length>
		<life>1000000</life>
	</car>
	<human>
		<hitSound>sounds/humanHit.wav</hitSound>
		<animation>
			<frame>
				<image x="0" y="0" w="256" h="256">images/spritesheet.png</image>
				<time>0.18</time>
				<bodyWidth>208</bodyWidth>
			</frame>
		</animation>
		<mass>1</mass>
		<radius>0.2</radius>
		<life>100</life>
		<walkingSpeed>2</walkingSpeed> <!-- m/s -->
		<runningSpeed>4</runningSpeed> <!-- m/s -->
		<stamina>1</stamina> <!-- seconds -->
		<weapon>Handgun</weapon>
	</human>
	<zombie>
		<hitSound>sounds/zombieHit.wav</hitSound>
		<animation>
			<frame>
				<image x="0" y="512" w="256" h="256">images/spritesheet.png</image>
				<time>0.18</time>
				<bodyWidth>130</bodyWidth>
			</frame>
		</animation>
		<mass>1</mass>
		<radius>0.2</radius>
		<life>100</life>
		<walkingSpeed>2</walkingSpeed>
		<runningSpeed>4</runningSpeed>
		<stamina>1</stamina>
		<weapon>ZombieFist</weapon>
	</zombie>
</zombieGame>
