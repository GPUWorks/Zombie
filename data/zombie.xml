<?xml version="1.0" encoding="UTF-8"?>
<zombieGame>
    <window>
        <width>600</width>
        <height>600</height>
        <positionX>432</positionX>
        <positionY>200</positionY>
        <maximized>1</maximized>
    </window>
    <interface>
        <font>fonts/Ubuntu-B.ttf</font>
    </interface>
    <settings>
        <map>map.xml</map>
        <unitLevel>50</unitLevel>
        <impulseThreshold>2</impulseThreshold>
        <timeStepMS>17</timeStepMS>
        <innerSpawnRadius>20.0</innerSpawnRadius>
        <outerSpawnRadius>25.0</outerSpawnRadius>
    </settings>
    <menu>
        <soundHighlited>sounds/handgunReload.wav</soundHighlited>
        <soundChoice>sounds/handgunShoot.wav</soundChoice>
        <backGroundImage>images/menu.jpg</backGroundImage>
    </menu>
    <music>
        <switch>off</switch>
        <track>sounds/Zombie Time v2.mp3</track>
    </music>
    <buildings>
        <hitSound>sounds/buildingHit.wav</hitSound>
    </buildings>
    <weapons>
        <weapon>
            <name>Handgun</name>
            <image>images/handgun.png</image>
            <damage>60</damage>
            <timeBetweenShots>0.3</timeBetweenShots>
            <range>10</range>
            <clipSize>12</clipSize>
            <shootSound>sounds/handgunShoot.wav</shootSound>
            <reloadSound>sounds/handgunReload.wav</reloadSound>
            <animation>
                <frame>
                    <image x="256" y="256" w="256" h="256">images/unitSpritesheet.png</image>
                    <bodyWidth>130</bodyWidth>
                </frame>
            </animation>
        </weapon>
        <weapon>
            <name>ZombieFist</name>
            <image>images/ZombieFist.png</image>
            <damage>10</damage>
            <timeBetweenShots>0.3</timeBetweenShots>
            <range>1</range>
            <clipSize>1000000</clipSize>
            <shootSound>sounds/ZombieFist.wav</shootSound>
            <reloadSound>sounds/ZombieReload.wav</reloadSound>
            <animation>
                <frame>
                    <image x="256" y="768" w="256" h="256">images/unitSpritesheet.png</image>
                    <bodyWidth>130</bodyWidth>
                </frame>
            </animation>
        </weapon>
    </weapons>
    <car>
        <moveAnimation>
            <frame>
                <image>images/jeep.png</image>
                <bodyWidth>104</bodyWidth>
            </frame>
        </moveAnimation>
        <mass>10</mass>
        <width>1</width>
        <length>2</length>
        <life>1000000</life>
    </car>
    <human>
        <hitSound>sounds/humanHit.wav</hitSound>
        <dieSound>sounds/zombieDeath.wav</dieSound>
        <moveAnimation>
            <frame>
                <image x="256" y="0" w="256" h="256">images/unitSpritesheet.png</image>
                <time>0.18</time>
                <bodyWidth>130</bodyWidth>
            </frame>
        </moveAnimation>
        <dieAnimation>
            <frame>
                <image>images/bloodDeath10.png</image>
                <time>0.1</time>
                <bodyWidth>3</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath11.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath12.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath13.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath14.png</image>
                <time>10</time>
                <bodyWidth>256</bodyWidth>
            </frame>
        </dieAnimation>
        <injuredAnimation>
            <frame>
                <image>images/bloodSplash10.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodSplash11.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
        </injuredAnimation>
        <mass>1</mass>
        <radius>0.2</radius>
        <life>100</life>
        <walkingSpeed>2</walkingSpeed>
        <runningSpeed>4</runningSpeed>
        <stamina>1</stamina>
        <weapon>Handgun</weapon>
    </human>
    <zombie>
        <hitSound>sounds/zombieHit.wav</hitSound>
        <dieSound>sounds/zombieDeath.wav</dieSound>
        <moveAnimation>
            <frame>
                <image x="0" y="256" w="256" h="256">images/unitSpritesheet.png</image>
                <time>0.18</time>
                <bodyWidth>130</bodyWidth>
            </frame>
        </moveAnimation>
        <dieAnimation>
            <frame>
                <image>images/bloodDeath10.png</image>
                <time>0.1</time>
                <bodyWidth>64</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath11.png</image>
                <time>0.1</time>
                <bodyWidth>64</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath12.png</image>
                <time>0.1</time>
                <bodyWidth>64</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath13.png</image>
                <time>0.1</time>
                <bodyWidth>64</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodDeath14.png</image>
                <time>10</time>
                <bodyWidth>64</bodyWidth>
            </frame>
        </dieAnimation>
        <injuredAnimation>
            <frame>
                <image>images/bloodSplash10.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
            <frame>
                <image>images/bloodSplash11.png</image>
                <time>0.1</time>
                <bodyWidth>256</bodyWidth>
            </frame>
        </injuredAnimation>
        <mass>1</mass>
        <radius>0.2</radius>
        <life>100</life>
        <walkingSpeed>2</walkingSpeed>
        <runningSpeed>4</runningSpeed>
        <stamina>1</stamina>
        <weapon>ZombieFist</weapon>
    </zombie>
</zombieGame>
