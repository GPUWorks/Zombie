<?xml version="1.0" encoding="UTF-8"?>
<zombie>
	<settings>
		<width>600</width>
		<height>600</height>
		<unitLevel>20</unitLevel>
		<zoomLevel>3</zoomLevel>
		<impulseThreshold>10</impulseThreshold>
		<timeStepMS>17</timeStepMS>
		<map>map.xml</map>
	</settings>
	<weapons>
		<weapon>
			<name>Handgun</name>
			<image>images/handgun.png</image>
			<damage>60</damage>
			<timeBetweenShots>0.3</timeBetweenShots>
			<range>10</range>
			<clipSize>12</clipSize>
			<shootSound>sound/handgunShoot.wav</shootSound>
			<reloadSound>sound/handgunReload.wav</reloadSound>
		</weapon>
		<weapon>
			<name>ZombieFist</name>
			<image>images/ZombieFist.png</image>
			<damage>10</damage>
			<timeBetweenShots>0.3</timeBetweenShots>
			<range>1</range>
			<clipSize>1000000</clipSize>
			<shootSound>sound/ZombieFist.wav</shootSound>
			<reloadSound>sound/ZombieReload.wav</reloadSound>
		</weapon>
	</weapons>
	<movingObjects>
		<car>
			<name>Volvo</name>
			<image>images/car.png</image>
			<mass>10</mass> <!-- Kg-->
			<width>1</width> <!-- Meter-->
			<length>2</length>
			<life>1000000</life>
		</car>
		<unit>
			<name>Human</name>
			<animation type="list">
				<scale>0.0078125</scale> <!-- 1/128 -->
				<image>images/human/human1.png</image>
				<time>0.18</time>
				<image>images/human/human2.png</image>
				<time>0.18</time>
				<image>images/human/human1.png</image>
				<time>0.18</time>
				<image>images/human/human3.png</image>
				<time>0.18</time>
			</animation>
			<mass>1</mass>
			<radius>0.2</radius>
			<life>100</life>
			<infected>0</infected> <!-- 1=true, 0=false -->
			<walkingSpeed>2</walkingSpeed> <!-- m/s -->
			<runningSpeed>4</runningSpeed> <!-- m/s -->
			<stamina>1</stamina> <!-- seconds -->
			<weapon>Handgun</weapon>
		</unit>
		<unit>
			<name>Zombie</name>
			<animation type="list">
				<scale>0.0078125</scale> <!-- 1/128 -->
				<image>images/zombie/zombie1.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie2.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie3.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie4.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie5.png</image>
				<time>0.18</time>
				<image>images/zombie/zombie6.png</image>
				<time>0.18</time>
			</animation>
			<mass>1</mass>
			<radius>0.2</radius>
			<life>100</life>
			<infected>1</infected>
			<walkingSpeed>2</walkingSpeed>
			<runningSpeed>4</runningSpeed>
			<stamina>1</stamina>
			<weapon>ZombieFist</weapon>
		</unit>
	</movingObjects>
</zombie>
